<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.0"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
 
 
 
   <servlet>
      <servlet-name>LoginPageServlet</servlet-name>
      <servlet-class>com.bridgelabz.servlet.LoginPageServlet</servlet-class>
   </servlet>
 

   <servlet-mapping>
      <servlet-name>LoginPageServlet</servlet-name>
      <url-pattern>/login</url-pattern>
   </servlet-mapping>
   
   
   
   <servlet>
      <servlet-name>RegistrationServlet</servlet-name>
      <servlet-class>com.bridgelabz.servlet.RegistrationServlet</servlet-class>
   </servlet>
 

   <servlet-mapping>
      <servlet-name>RegistrationServlet</servlet-name>
      <url-pattern>/register</url-pattern>
   </servlet-mapping>
   
   
   
   <servlet>
      <servlet-name>WelcomePageServlet</servlet-name>
      <servlet-class>com.bridgelabz.servlet.WelcomePageServlet</servlet-class>
   </servlet>
 

   <servlet-mapping>
      <servlet-name>WelcomePageServlet</servlet-name>
      <url-pattern>/logout</url-pattern>
   </servlet-mapping>
 
  <filter>
      <filter-name>Validation</filter-name>
      <filter-class>com.bridgelabz.validation.Validation</filter-class>
   </filter>
 

   <filter-mapping>
      <filter-name>Validation</filter-name>
      <url-pattern>/register</url-pattern>
   </filter-mapping>  
   
</web-app>